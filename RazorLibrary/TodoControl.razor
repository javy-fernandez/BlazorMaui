
<EditForm Model="@todo">
    <div class="mb-3">
        <label for="todoItem" class="form-label">Tarea:</label>
        <InputText @bind-Value="todo.TodoItem" class="form-control mb-2" id="todoItem" />
        <button class="btn btn-primary" @onclick="AddTodo">Agregar</button>
    </div>
</EditForm>

<h3>Lista de tareas</h3>
<ul>
    @foreach (var t in todos)
    {
        <li class="mb-2">
            @if (t.IsComplete)
            {
                <span style="text-decoration: line-through">
                    @t.TodoItem
                </span>
            }
            else
            {
                @t.TodoItem
                <button class="btn btn-warning btn-sm ms-3"
                @onclick="() => t.IsComplete = true">
                    Complete
                </button>
            }
        </li>
    }
</ul>

@code {
    private List<TodoModel> todos = new();
    private TodoModel todo = new();

    private void AddTodo()
    {
        todos.Add(todo);
        todo = new();
    }
}
